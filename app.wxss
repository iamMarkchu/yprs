/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.block {
  margin: 30rpx;
  /* border: 1rpx solid #000; */
  border-radius: 5rpx;
  box-shadow:0px 3rpx 32rpx 0px rgba(0, 0, 0, 0.19);
  background-color: #fff;
}
.block2 {
  margin: 30rpx;
  /* border: 1rpx solid #000; */
  border-radius: 20rpx;
  box-shadow:0px 3rpx 32rpx 0px rgba(0, 0, 0, 0.19);
  background-color: #fff;
}
.flex-block {
  display: flex;
  flex-wrap: wrap;
}
.tab {
  display: flex;
  justify-content: space-between;
  padding-top: 65rpx;
  color: #fff;
}
.tab .tab-1 {
  margin-left: 20rpx;
}