/**app.wxss**/
page {
  font-family: PingFang SC;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.block {
  margin: 30rpx;
  /* border: 1rpx solid #000; */
  border-radius: 5rpx;
  box-shadow:0px 3rpx 32rpx 0px rgba(0, 0, 0, 0.19);
  background-color: #fff;
}
.block2 {
  margin: 30rpx;
  /* border: 1rpx solid #000; */
  border-radius: 20rpx;
  box-shadow:0px 3rpx 32rpx 0px rgba(0, 0, 0, 0.19);
  background-color: #fff;
}
.flex-block {
  display: flex;
  flex-wrap: wrap;
}
.justify-content {
  justify-content: center;
}
.space-between {
  justify-content: space-between;
}
.align-items {
  align-items: center;
}
.my-bg {
  position: absolute;
  top: 0rpx;
  z-index: -1;
  width: 100%;
}
.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}