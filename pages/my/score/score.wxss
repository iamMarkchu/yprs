/* pages/my/score/score.wxss */
page {
  background-color: #F7F4F8;
  position: relative;
}
.score-container {
  padding-top: 40rpx;
}
.score-block {
  justify-content: center;
  text-align: center;
  padding: 42rpx 32rpx;
}
.score-num {
  width: 50%;
  display: flex;
  align-items: baseline
}
.score-num .score-num-item {
  color: #E40011;
  font-size: 1.5rem;
}
.score-num .score-num-text {
  font-size: .7rem;
}
.score-btn {
  width: 50%;
}
.score-btn .btn {
  background:#E40011;
  box-shadow:0px 3px 32px 0px rgba(0, 0, 0, 0.19);
  border-radius:20px;
  color: #fff;
  width:166rpx;
height:60rpx;
font-size: .8rem;
display: flex;
justify-content: center;
align-items: center;
  margin-bottom: 20rpx;
}
.score-btn-wrap {
  float: right;
}
.score-rule {
  font-size: .7rem;
  color: #999999;
}
.num-block {
  display: flex;
  justify-content: space-between;
  padding: 42rpx 34rpx;
}
.num-num {
  font-size: 1.5rem;
  color: #E40011;
  margin-bottom: 30rpx;
}
