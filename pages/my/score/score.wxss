.num-text {
  font-size: .8rem;
}
.list-tab {
  display: flex;
  justify-content: center;
  text-align: center;
  padding-top: 39rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid rgba(238,238,238,1);
  margin-left: 30rpx;
  margin-right: 30rpx;
}
.list-tab view {
  width: 50%;
  font-weight: 600;
}
.list-tab .selected {
  color: #E40011;
}
.list-tab-header {
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid rgba(238,238,238,1);
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}
.list-tab-1, .list-tab-2 {
  margin-right: 30rpx;
  margin-left: 30rpx;
}
.list-tab-body .list-tab-item {
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid rgba(238,238,238,1);
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}