<!--pages/my/qrcode/qrcode.wxml-->
<view class="qrcode-contaienr">
  <view class="block qrcode-block">
    <view class="first">
      <image src="/resource/images/qr_border@3x.png" class="bg"></image>
      <image class="avatar" src="{{avatar}}"></image>
      <view class="user-name">
        <view class="user-name-text">{{nickName}}</view>
      </view>
    </view>
    <view class="second">
      <image src="{{qrcode}}" class="second-qrcode"></image>
    </view>
    <view class="three">
      微信扫一扫进入小程序
    </view>
  </view>
  <view class="button-block">
    <view class="btn-item">
      <view class="btn btn-1" bindtap="bindSave">
      保存到手机
      </view>
    </view>
    <view class="btn-item">
      <button class="btn btn-2" open-type="share">分享</button>
    </view>
  </view>
</view>
